@model EurocomV2.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "User Login";
}

<body style="background: #9fdefa">
    <div class="Head">Login</div>
    <div class="container">
        <div class="row">
            <div class="d-none d-lg-block col-lg-2" style="text-align:center; min-height:150px;">
            </div>
            <div class="col-12 col-lg-8 Privacytext">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div style="text-align:center;">
                            <button type="submit" class="btn btn-primary w-50" style="background-color:#9fdefa; font-size:large; font-weight:bold; border-color:white;">Login</button>
                        </div>

                        <div class="col-12" style="min-height:20px;"></div>
                    </div>
                </form>
                <div class="d-none d-lg-block col-lg-2" style="text-align:center; min-height:150px;">
                    <div class="col-12" style="min-height:60px"></div>
                </div>
            </div>
        </div>
    </div>
</body>