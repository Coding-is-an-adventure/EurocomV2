@using EurocomV2.Controllers
@using EurocomV2.Models.Classes
@inject UserManager<ApplicationUser> userManager
@inject SignInManager<ApplicationUser> signInManager
@{
    ViewData["Title"] = "Home Page";
    getGender get = new getGender();
}
<body style="background: #9fdefa">
    <div class="Head">Welkom</div>
    @if (signInManager.IsSignedIn(User))
    {

        char gender = get.getGenderMethod(await userManager.FindByIdAsync(TempData["UserID"].ToString()));

        @if (gender == 'm')
        {
            <div class="Head2">Meneer @TempData["LastName"]</div>
        }
        else
        {
            <div class="Head2">Mevrouw @TempData["LastName"]</div>
        }
    }
    <div class="container">
        <div class="row">

            <div class="col-6" style="text-align:center; min-height:150px;">
                <a href="Home/Status">
                    <button asp-action="Status" type="button" class="btn btn-primary button btn w-75 h-100">
                        Status<div></div>
                        <span class="glyphicon glyphicon-heart buttonGlyph" aria-hidden="true"></span>
                    </button>
                </a>
            </div>
            <div class="col-6" style="text-align: center;
        min-height: 150px;">
                <button type="button" class="btn btn-primary button btn w-75 h-100">
                    Account <div></div>
                    <span class="glyphicon glyphicon-user buttonGlyph" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</body>
